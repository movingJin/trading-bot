DROP TABLE Ask_Trade_Setting;
DROP TABLE Bid_Trade_Setting;

CREATE TABLE Ask_Trade_Setting
(
   idx bigint generated by default as identity,
   user_name varchar(255),
   coin_name varchar(63),
   candle varchar(255),
   reference varchar(255),
   condition_ratio double,
   price double,
   primary key(id)
);

CREATE TABLE Bid_Trade_Setting
(
   idx bigint generated by default as identity,
   user_name varchar(255),
   coin_name varchar(63),
   candle varchar(255),
   reference varchar(255),
   condition_ratio double,
   price double,
   primary key(id)
);

create table member(connect_key varchar(34) NOT NULL PRIMARY KEY);